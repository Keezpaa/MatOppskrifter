<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="no.kasperi.matoppskrifter.fragmenter.KategorierFragment">

        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/kategorier_tittel"
        style="@style/h3_tittel_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="16dp"
        android:text="Undersøk oppskriftene i alle våre kategorier"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_kategorier"
        android:layout_width="match_parent"
        android:layout_height="659dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:text="Kategori fragment" />


</FrameLayout>